pipeline {
    agent any

    tools {
        // Install the Maven version configured as "M3" and add it to the path.
        maven "mvn"
    }

    stages {
        stage('get Code to GitHub') {
            steps {
                // Get some code from a GitHub repository
                git 'https://github.com/lqthang2204/Appium.git'
            }


//             post {
