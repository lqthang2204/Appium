        }
              stage ('=============== Starting appium server ===================='){
                 steps{
                   echo 'running ...'
                              bat label: '', script: 'node C:\Users\User\AppData\Roaming\npm\node_modules\appium\build\lib\main.js --address 0.0.0.0 --port 4723 --no-reset &'
                 }
         }
         stage ('Running FrameworkAuto'){
